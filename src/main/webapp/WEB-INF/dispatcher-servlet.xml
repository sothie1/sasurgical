<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
">
    <!-- declare general Annotation support -->
    <context:annotation-config/>
    <context:component-scan base-package="sasurgical.sasurgical" />
    <context:component-scan base-package="sasurgical.jdbc" />
    <context:component-scan base-package="sasurgical.controllers" />    
    <context:component-scan base-package="sasurgical.dto" />
    
    <mvc:annotation-driven />
    <context:property-placeholder location="classpath:sasurgical.properties" />
    
    <mvc:resources mapping="/resources/**" location="/resources/"/>
    <mvc:resources mapping="/templates/**" location="/templates/"/>
    
</beans>
